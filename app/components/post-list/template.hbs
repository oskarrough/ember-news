<h3>
	{{#if post.url}}

		<a href="{{post.url}}">
			{{post.title}}
			<small>({{post.url}})</small>
		</a>

	{{else}}

		{{#link-to 'post' post}}
			{{post.title}}
		{{/link-to}}

	{{/if}}
</h3>

